<Window x:Class="dotNet5781_03B_6877_2459.Add_Bus_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_6877_2459"
        mc:Ignorable="d"
        Title="Add_Bus_Window" Height="160" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Content="Insert bus's ID number below" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBox Name="Bus_ID_insert" Height="23" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />
        <Label Content="Insert Creation Date below" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <DatePicker Name="Bus_CD_insert" Height="23" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" />
        <CheckBox Content="Click here when you're done"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5" Checked="CheckBox_Checked" Width="200"/>





    </StackPanel>
</Window>
