<Window x:Class="dotNet5781_03B_6877_2459.Travel_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_6877_2459"
        mc:Ignorable="d"
        Title="Travel_Window" Height="150" Width="800">
    <StackPanel Orientation="Vertical">
        <Label Content="Insert the length of the travel in kilometers below (integer numbers only)" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        <TextBox Name="Lenght_insert" Height="35" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" FontSize="24" KeyDown="Lenght_insert_KeyDown"/>
    </StackPanel>
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
</Window>
